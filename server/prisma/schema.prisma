model Recipe {
    id          Int      @id @default(autoincrement())
    name        String
    description String
    content     String
    createdAt   DateTime @default(now())

    ingredients Ingredient[]

    user   User @relation(fields: [userId], references: [id])
    userId Int
}

model Ingredient {
    id Int @id @default(autoincrement())

    amount     Float
    amountUnit String
    // amountUnit Unit

    product   Product @relation(fields: [productId], references: [id])
    productId Int
    Recipe    Recipe? @relation(fields: [recipeId], references: [id])
    recipeId  Int?
}

model Comment {
    id      Int     @id @default(autoincrement())
    rate    Float // 1 - 5
    content String?

    likes    Like[]
    dislikes Dislike[]

    user   User @relation(fields: [userId], references: [id])
    userId Int
}

model Like {
    id        Int      @id @default(autoincrement())
    Comment   Comment? @relation(fields: [commentId], references: [id])
    commentId Int?

    user   User @relation(fields: [userId], references: [id])
    userId Int
}

model Dislike {
    id Int @id @default(autoincrement())

    Comment   Comment? @relation(fields: [commentId], references: [id])
    commentId Int?

    user   User @relation(fields: [userId], references: [id])
    userId Int
}
